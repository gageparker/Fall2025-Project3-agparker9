@model IEnumerable<Fall2025_Project3_agparker9.Models.MovieModel>?

@{
    ViewData["Title"] = "Movies";
    ViewData["BodyClass"] = "movies-page";
}

<h1>Movie Catalog</h1>

<table class="table">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Year</th>
        <th>IMDB</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var movie in Model)
        {
            <tr>
                <td>
                    @if (movie.Poster != null)
                    {
                        var base64 = Convert.ToBase64String(movie.Poster);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" alt="Poster" width="100" height="150" />
                    }
                    else
                    {
                        <span>No Poster</span>
                    }
                </td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(movie.ImdbLink))
                    {
                        <a href="@movie.ImdbLink" target="_blank">IMDB</a>
                    }
                    else
                    {
                        <span>N/A</span>
                    }

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@movie.MovieId"
                       onclick="return confirm('Are you sure you want to delete this movie?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">No movies found.</td>
        </tr>
    }
    
    
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
</p>