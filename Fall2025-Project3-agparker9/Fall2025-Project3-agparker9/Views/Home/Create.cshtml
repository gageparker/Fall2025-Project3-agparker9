
@{
    ViewData["BodyClass"] = "create-page";
}
@model Fall2025_Project3_agparker9.Models.MovieModel

<h1>Add Movie</h1>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="ImdbLink"></label>
        <input asp-for="ImdbLink" class="form-control" />
    </div>

    <div class="form-group">
        <label>Poster</label>
        <input type="file" name="PosterFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>