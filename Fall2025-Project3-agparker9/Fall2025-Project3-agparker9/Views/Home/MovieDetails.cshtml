@model Fall2025_Project3_agparker9.ViewModels.MovieDetailsViewModel
@{
    ViewData["BodyClass"] = "movieDetails";
}

<h2 class="headerText">Movie Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                @if (Model.Movie.Poster != null)
                {
                    var imageBase64 = Convert.ToBase64String(Model.Movie.Poster);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img class="card-img-top" src="@imageSrc" alt="@Model.Movie.Title Poster" />
                }
                else
                {
                    <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 400px;">
                        <p>No poster available</p>
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@Model.Movie.Title</h5>
                    <p class="card-text"><strong>Genre:</strong> @Model.Movie.Genre</p>
                    <p class="card-text"><strong>Year:</strong> @Model.Movie.Year</p>
                    <p><a href="@Model.Movie.ImdbLink" target="_blank" rel="noopener noreferrer">View on IMDb</a></p>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Movie.MovieId" class="btn btn-primary">Edit</a>
                        <a asp-action="Movies" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- AI Reviews and Sentiment Analysis -->
            <div class="mt-4">
                <h3 class="headerText">
                    Overall Sentiment: 
                    <span class="badge @(Model.SentimentLabel == "Positive" ? "bg-success" : Model.SentimentLabel == "Negative" ? "bg-danger" : "bg-secondary")">
                        @Model.SentimentLabel (@Model.AverageSentiment.ToString("F3"))
                    </span>
                </h3>

                <h4 class="headerText">Reviews</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                        <tr>
                            <th style="width: 70%;">Review</th>
                            <th style="width: 30%;">Sentiment</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var review in Model.Reviews)
                        {
                            <tr>
                                <td>@review.Review</td>
                                <td>
                                    <span class="badge @(review.SentimentLabel == "Positive" ? "bg-success" : review.SentimentLabel == "Negative" ? "bg-danger" : "bg-secondary")">
                                        @review.SentimentLabel
                                    </span>
                                    <br />
                                    <small class="text-muted">Score: @review.SentimentScore.ToString("F3")</small>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <h4 class="headerText">Actors Featured in @Model.Movie.Title</h4>
    
            @if (Model.Actors != null && Model.Actors.Any())
            {
                <ul class="list-group">
                    @foreach (var actor in Model.Actors)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <span>@actor</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No actors available.</p>
            }
        </div>
        
    </div>
</div>